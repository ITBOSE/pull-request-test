{
    "env": {
        "browser": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0
    },
    "globals": {
        "window": true,
        "device": true,
        "Backbone": true,
        "CONSTANTS": true,
        "DB_CONF": true,
        "requestFileSystem": true,
        "LocalFileSystem": true,
        "TripApp": true,
        "TripAreaView": true,
        "resolveLocalFileSystemURL": true,
        "FileTransfer": true
    }
}